<Window x:Class="CatsClient.XAML.TracedPocos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatsClient.XAML"
        mc:Ignorable="d"
        Title="TracedPocos" Height="450" Width="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Click="Button_Click">Собрать мусор</Button>
        <DataGrid ItemsSource="{Binding Heart.TracedPocos}" AutoGenerateColumns="False" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип" Binding="{Binding Item1}" />
                <DataGridTextColumn Header="Количество" Binding="{Binding Item2}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
