<Window x:Class="Net.Leksi.Pocota.Client.ViewTracedPoco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Net.Leksi.Pocota.Client"
        xmlns:local1="clr-namespace:Net.Leksi.Pocota.Client;assembly=Net.Leksi.Pocota.Client.CSharp"
        mc:Ignorable="d"
        Title="{Binding Heart.Title}" 
        Height="450" Width="800"  DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <local1:BindingProxy x:Key="ViewTracedPocoCommandProxy" Data="{Binding ViewTracedPocoCommand}"/>
        <Style TargetType="Button" x:Key="ViewButtonStyle" x:Shared="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=$test}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=$test}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="ModifiedPropertyStyle" x:Shared="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Converter={local:ViewTracedPocoConverter}, ConverterParameter=IsModified}" Value="True">
                    <Setter Property="Background" Value="#EADDCA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox" x:Key="ViewCollectionComboBoxStyle" x:Shared="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=IsNull}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=IsNull}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="ViewTextStyle" x:Shared="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=$test}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding $path, Converter={local:ViewTracedPocoConverter}, ConverterParameter=$test}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="StackPanel" x:Key="PrimaryKeyStyle" x:Shared="False">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEntity}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="ViewCollectionDataTemplateInitial" x:Shared="False">
            <StackPanel>
                <TextBlock Style="{local1:ParameterizedResource ViewTextStyle, Replaces=$path:Initial|$test:IsNull}">null</TextBlock>
                <ComboBox ItemsSource="{Binding Initial, Converter={local:ViewTracedPocoConverter}}" 
                        SelectedIndex="0" DropDownClosed="ComboBox_DropDownClosed"
                        Style="{local1:ParameterizedResource  ViewCollectionComboBoxStyle, Replaces=$path:Initial}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button DockPanel.Dock="Right" Style="{local1:ParameterizedResource ViewButtonStyle, Replaces=$path:.|$test:IsPoco}" Command="{Binding Data, Source={StaticResource ViewTracedPocoCommandProxy}}" 
                                                        CommandParameter="{Binding}" Margin="10,0,0,0" Width="Auto">
                                    <Button.Content>👁</Button.Content>
                                </Button>
                                <TextBlock Text="{Binding Converter={local:ViewTracedPocoConverter}}"/>
                            </DockPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ViewCollectionDataTemplateCurrent" x:Shared="False">
            <StackPanel>
                <TextBlock Style="{local1:ParameterizedResource ViewTextStyle, Replaces=$path:Current|$test:IsNull}">null</TextBlock>
                <ComboBox ItemsSource="{Binding Current, Converter={local:ViewTracedPocoConverter}}" 
                        SelectedIndex="0" DropDownClosed="ComboBox_DropDownClosed"
                        Style="{local1:ParameterizedResource  ViewCollectionComboBoxStyle, Replaces=$path:Current}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button DockPanel.Dock="Right" Style="{local1:ParameterizedResource ViewButtonStyle, Replaces=$path:.|$test:IsPoco}" Command="{Binding Data, Source={StaticResource ViewTracedPocoCommandProxy}}" 
                                                        CommandParameter="{Binding}" Margin="10,0,0,0" Width="Auto">
                                    <Button.Content>👁</Button.Content>
                                </Button>
                                <TextBlock Text="{Binding Converter={local:ViewTracedPocoConverter}}"/>
                            </DockPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ViewCollectionDataTemplate" x:Shared="False">
            <StackPanel>
                <TextBlock d:Style="{local1:ParameterizedResource ViewTextStyle, Replaces=$test:IsNull}">null</TextBlock>
                <ComboBox ItemsSource="{Binding $path, Converter={local:ViewTracedPocoConverter}}" 
                        SelectedIndex="0" DropDownClosed="ComboBox_DropDownClosed"
                        d:Style="{local1:ParameterizedResource ViewCollectionComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button DockPanel.Dock="Right" d:Style="{local1:ParameterizedResource ViewButtonStyle, Replaces=$path:.|$test:IsPoco}" 
                                            Command="{StaticResource ViewTracedPocoCommandProxy}" 
                                            CommandParameter="{Binding}" Margin="10,0,0,0">
                                    <Button.Content>👁</Button.Content>
                                </Button>
                                <TextBlock Text="{Binding Converter={local:ViewTracedPocoConverter}}"/>
                            </DockPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBlock Text="{Binding PocoState,  Converter={local:ViewTracedPocoConverter}}" Margin="10,10,10,10"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Style="{local1:ParameterizedResource PrimaryKeyStyle}">
            <DataGrid ItemsSource="{Binding KeysViewSource.View}" AutoGenerateColumns="False"  Margin="10,10,10,10" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ключ" Binding="{Binding Item1}"/>
                    <DataGridTextColumn Header="Значение" Binding="{Binding Item2}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <DataGrid ItemsSource="{Binding PropertiesViewSource.View}" AutoGenerateColumns="False"  Margin="10,10,10,10">
            <DataGrid.Resources>
                <DataTemplate x:Key="Name">
                    <TextBlock Text="{Binding Name}" Style="{StaticResource ModifiedPropertyStyle}"/>
                </DataTemplate>
                <local:ViewTracedPocoDataTemplateSelector x:Key="Initial" Collection="{StaticResource ViewCollectionDataTemplateInitial}">
                    <local:ViewTracedPocoDataTemplateSelector.Poco>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button DockPanel.Dock="Right" Style="{local1:ParameterizedResource ViewButtonStyle, Replaces=$path:Initial|$test:IsNotNull}" 
                                        Command="{Binding Data, Source={StaticResource ViewTracedPocoCommandProxy}}" 
                                        CommandParameter="{Binding Current}" Margin="10,0,0,0">
                                    <Button.Content>👁</Button.Content>
                                </Button>
                                <TextBlock Text="{Binding Initial, Converter={local:ViewTracedPocoConverter}}" />
                            </DockPanel>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Poco>
                    <local:ViewTracedPocoDataTemplateSelector.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding Initial, Converter={local:ViewTracedPocoConverter}}" >
                            </TextBlock>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Value>
                </local:ViewTracedPocoDataTemplateSelector>
                <local:ViewTracedPocoDataTemplateSelector x:Key="Current" Collection="{local1:ParameterizedResource ViewCollectionDataTemplate, Replaces=$path:Current}">
                    <local:ViewTracedPocoDataTemplateSelector.Poco>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Button DockPanel.Dock="Right" Style="{local1:ParameterizedResource ViewButtonStyle, Replaces=$path:Current|$test:IsNotNull}" 
                                        Command="{Binding Data, Source={StaticResource ViewTracedPocoCommandProxy}}" 
                                        CommandParameter="{Binding Current}" Margin="10,0,0,0" Width="Auto">
                                    <Button.Content>👁</Button.Content>
                                </Button>
                                <TextBlock Text="{Binding Current, Converter={local:ViewTracedPocoConverter}}"/>
                            </DockPanel>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Poco>
                    <local:ViewTracedPocoDataTemplateSelector.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding Current, Converter={local:ViewTracedPocoConverter}}" >
                            </TextBlock>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Value>
                </local:ViewTracedPocoDataTemplateSelector>
                <local:ViewTracedPocoDataTemplateSelector x:Key="CurrentEdit">
                    <local:ViewTracedPocoDataTemplateSelector.Poco>
                        <DataTemplate>
                            <TextBlock Text="{Binding Current, Converter={local:ViewTracedPocoConverter}}"
                                       Visibility="{Binding Converter={local:ViewTracedPocoConverter}, ConverterParameter=Text}"/>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Poco>
                    <local:ViewTracedPocoDataTemplateSelector.Value>
                        <DataTemplate>
                            <TextBox Text="{Binding Current, Converter={local:ViewTracedPocoConverter}, Mode=TwoWay}" HorizontalAlignment="Stretch"
                                     Visibility="{Binding Converter={local:ViewTracedPocoConverter}, ConverterParameter=Edit}">
                            </TextBox>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Value>
                    <local:ViewTracedPocoDataTemplateSelector.Collection>
                        <DataTemplate>
                            <TextBox Text="{Binding Current, Converter={local:ViewTracedPocoConverter}, Mode=TwoWay}" HorizontalAlignment="Stretch"
                                     Visibility="{Binding Converter={local:ViewTracedPocoConverter}, ConverterParameter=Edit}">
                            </TextBox>
                        </DataTemplate>
                    </local:ViewTracedPocoDataTemplateSelector.Collection>
                </local:ViewTracedPocoDataTemplateSelector>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Свойство" CellTemplate="{StaticResource Name}"/>
                <DataGridTemplateColumn Header="Исходное значение" CellTemplateSelector="{StaticResource Initial}"/>
                <DataGridTemplateColumn Header="Текущее значение" CellTemplateSelector="{StaticResource Current}" CellEditingTemplateSelector="{StaticResource CurrentEdit}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
