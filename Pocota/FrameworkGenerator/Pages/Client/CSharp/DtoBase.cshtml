@page
@using Net.Leksi.Pocota.FrameworkGenerator
@using Net.Leksi.Pocota.FrameworkGenerator.Client.CSharp
@using System.Collections.ObjectModel
@model ClientDtoBaseModel
@Html.Partial("Header", Model)

public abstract class @Model.ClassName@if(Model.BaseClasses.Any()){<text>: @Html.Raw(string.Join(", ", Model.BaseClasses))</text>}

{
@foreach(PropertyModel pm in Model.Properties)
{
    <text>    public abstract @if(pm.IsCollection)
        {
            <text>@Html.Raw($"{nameof(ObservableCollection<object>)}<{pm.ItemTypeName}>")</text>
        }
        else
        {
            <text>@Html.Raw(pm.TypeName)</text>
        }@(pm.IsNullable ? "?" : string.Empty) @pm.Name { get; @if(!pm.IsReadOnly){<text>set; </text>}}
</text>
}
}
